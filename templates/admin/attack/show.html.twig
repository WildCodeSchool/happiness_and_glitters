{% extends 'admin/base.html.twig' %}

{% block title %}Attack{% endblock %}

{% block admin_body %}
    <h1>Attack</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attack.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attack.name }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ attack.avatar }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ attack.cost }}</td>
            </tr>
            <tr>
                <th>Gain</th>
                <td>{{ attack.gain }}</td>
            </tr>
            <tr>
                <th>SuccessRate</th>
                <td>{{ attack.successRate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_attack_index') }}">back to list</a>

    <a href="{{ path('app_admin_attack_edit', {'id': attack.id}) }}">edit</a>

    {{ include('admin/attack/_delete_form.html.twig') }}
{% endblock %}
