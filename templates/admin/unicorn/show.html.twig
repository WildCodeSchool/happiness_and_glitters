{% extends 'admin/base.html.twig' %}

{% block title %}
	{{ unicorn.name }}
{% endblock %}

{% block admin_body %}
	<h1>{{ unicorn.name }}</h1>

	<table class="admin-table">
		<tbody>
			<tr>
				<th>ID</th>
				<td>{{ unicorn.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ unicorn.name }}</td>
			</tr>
			<tr>
				<th>Avatar</th>
				{% if unicorn.avatar is null %}
					<td>Aucun</td>
				{% else %}
					<td><img src="{{ vich_uploader_asset(unicorn) }}" alt="Unicorn avatar"/></td>
				{% endif %}
			</tr>
			<tr>
				<th>Score</th>
				<td>{{ unicorn.score }}</td>
			</tr>
			<tr>
				<th>Combats</th>
				<td>{{ unicorn.fights }}</td>
			</tr>
			<tr>
				<th>Victoire</th>
				<td>{{ unicorn.wonFights }}</td>
			</tr>
			<tr>
				<th>DÃ©faites</th>
				<td>{{ unicorn.lostFights }}</td>
			</tr>
			<tr>
				<th>KO</th>
				<td>{{ unicorn.koFights }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_admin_unicorn_index') }}">Retour</a>

	<a href="{{ path('app_admin_unicorn_edit', {'id': unicorn.id}) }}">Editer</a>

	{{ include('admin/unicorn/_delete_form.html.twig') }}
{% endblock %}
